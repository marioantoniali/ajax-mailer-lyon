<table id="mailer">
  <thead>
    <tr>
      <th>Object</th>
      <th>Body</th>
    </tr>
  </thead>

  <% @emails.each do |email| %>

  <tbody>
    <tr>
      <td><%= link_to email.object, "/show/"+email.id.to_s, remote: true %></td>
      <td id="mailer-content"></td>
    </tr>
  </tbody>

  <% end %>

</table>
